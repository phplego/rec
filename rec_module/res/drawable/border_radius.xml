<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="-1px">
    <shape android:shape="rectangle">

        <gradient android:type="linear"
                  android:startColor="#33AAAAAA"
                  android:endColor="#33AAAAAA"
                  android:centerColor="#22AAAAAA"
                  android:angle="90"/>

        <corners android:bottomRightRadius="0dp"
                 android:bottomLeftRadius="3dp"
                 android:topLeftRadius="0dp"
                 android:topRightRadius="3dp"
                />

        <stroke android:width="1px" android:color="#33AAAAAA"/>

    </shape>
    </item>
    <item android:bottom="1px" android:top="1px" android:right="1px" android:left="-1px">
        <shape android:shape="rectangle">
            <stroke android:width="1px" android:color="#11AAAAAA"/>
            <solid android:color="#00000000"/>
            <corners android:bottomRightRadius="0dp"
                     android:bottomLeftRadius="3dp"
                     android:topLeftRadius="0dp"
                     android:topRightRadius="3dp"
                    />
        </shape>
    </item>
</layer-list>