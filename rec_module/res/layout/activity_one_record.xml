<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top">

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="top"
            >
        <ImageView
                android:id="@+id/incoming_indicator_one_record"
                android:src="@drawable/sym_call_outgoing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingLeft="7dip"
                android:paddingRight="7dip"
                android:layout_gravity="center_vertical"
                />
        <TextView
                android:id="@+id/one_record_title"
                android:layout_weight="2.0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="+79883879040"
                android:textSize="28dip"
                />
    </LinearLayout>


    <TextView
            android:id="@+id/one_record_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/note_title"
            />
    <EditText
            android:id="@+id/one_record_note"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:capitalize="sentences"
            android:gravity="top"
            android:textSize="28dip"
            android:hint="@string/enter_note_here"
            android:minLines="2"
            />
    <Button
            android:id="@+id/ok"
            android:text="@android:string/ok"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            />

    <TextView
            android:id="@+id/etc_info"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            />
</LinearLayout>

